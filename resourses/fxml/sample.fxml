<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="sample.Controller"
          stylesheets="/css/sample.css"
          xmlns:fx="http://javafx.com/fxml">
    <Text text="Travel Expenses" styleClass="title" GridPane.rowIndex="0" GridPane.columnSpan="2"
          GridPane.halignment="CENTER"/>
    <Label text="Kilometer: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="kilometer" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Litres Per 100 KM: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="lKm" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Price per Liter: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="price" GridPane.rowIndex="3" GridPane.columnIndex="1"/>


    <Button text="Calculate" onAction="#calculate" GridPane.rowIndex="6" GridPane.columnIndex="1"
            GridPane.halignment="CENTER"/>
    <Label text="RESULT: " GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="result" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
</GridPane>